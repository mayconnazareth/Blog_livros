<h1>Meu Blog de Livros</h1>
<%= link_to "Novo Livro", new_book_path %>

<% @books.each do |book| %>
  <div>
    <h2><%= link_to book.title, book %></h2>
    <p>Autor: <%= book.author %></p>
    <p>Nota: <%= book.note %>/5</p>
    <%= link_to "Editar", edit_book_path(book) %> |
    <%= button_to "Apagar", book_path(book), method: :delete, data: { confirm: "Tem certeza?" } %>
  </div>
<% end %>
